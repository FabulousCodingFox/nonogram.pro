---
import { SEO } from 'astro-seo';
import { ClientRouter } from 'astro:transitions';
import { UMAMI_WEBSITE_ID } from 'astro:env/client';
import '../styles/tailwind.css';

interface Props {
  title: string;
  description: string;
}

const { title, description }: Props = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full w-full" transition:animate="none">
  <head>
    <SEO
      title={title}
      description={description}
      canonical={Astro.site?.toString().slice(0, -1)}
      extend={{
        meta: [
          { name: 'viewport', content: 'width=device-width, initial-scale=1.0' },
          { name: 'generator', content: Astro.generator }
        ]
      }}
      charset="UTF-8"
    />
    <script type="text/partytown" src="https://metrics.nonogram.pro/script.js" data-website-id={UMAMI_WEBSITE_ID} is:inline></script>
    <ClientRouter fallback="animate" />
  </head>
  <body class="h-full w-full" transition:animate="fade">
    <slot />
  </body>
</html>
